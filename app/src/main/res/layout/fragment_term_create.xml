<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wgutermtracker.jeffnoble.wgutermtracker.TermCreateFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TermCreateTitleLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create New Term"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/TermCreateTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Term Title (e.g. Fall, Spring, etc. )"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/TermCreateStartDateLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Date"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <DatePicker
                android:id="@+id/TermCreateStartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/TermCreateEndDateLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="End Date"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <DatePicker
                android:id="@+id/TermCreateEndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/CreateTerm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Term"
                android:textAlignment="center"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
